{
    "compilerOptions": {
      "baseUrl": ".",
      "module": "CommonJS",   // Usar ES Modules
      "target": "ES6",      // Compilar a ES6
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "paths": {
        "*": ["node_modules/*", "api/src/*"]
      }
    },
    "include": [
      "api/src/**/*",
      "client/src/**/*"
    ],
    "references": [
      { "path": "./api/tsconfig.json" },
      { "path": "./client/tsconfig.json" }
    ]
  }
  